extends layout

block content
	nav(class='navbar navbar-custom navbar-fixed-top', role='navigation')
			div(class='container', style='margin-right: 0;width: 100%')
				div(class='navbar-header visible-xs')
					div(class='mini-logobouineur')
				div(class='navbar visible-xs visible-sm navbar-custom-phone')
					div(class='dropdown-custom')
						a(href='#'	,data-toggle='dropdown', class='dropdown-toggle')
							span(class='glyphicon glyphicon-menu-hamburger',aria-hidden='true') Menu
						ul(class='dropdown-menu')
							li(class='hidden')
								a(href='#page-top')
							li
								a(class='page-scroll', href='/../#home') Home
							li(role='separator',class='divider')
							li
								a(class='page-scroll', href='/../#projet') Projet
							li(role='separator',class='divider')
							li
								a(class='page-scroll', href='/../#onlive') On Live&iexcl;
							li(role='separator',class='divider')
							li
								a(class='page-scroll', href='/../#sponsors') Sponsors
				div(class='navbar-right hidden-xs hidden-sm col-md-10 col-lg-10')
					ul(class='nav navbar-nav navbar-bar-custom')
						li(class='hidden')
								a(href='#page-top')
						li
							a(class='page-scroll', href='/../#home') Home
						li
							a(class='page-scroll', href='/../#projet') Le Projet
						li(class='active')
							a(class='page-scroll', href='/../#onlive') On Live&iexcl;
						li
							a(class='page-scroll', href='/../#sponsors') Sponsors
	header(id='onlive-page',class='intro')
		div(class'intro-body')
			div(class='container')
				div(class='row')
					h3(class='col-md-8 col-lg-8 col-md-offset-2 col-lg-offset-2', style=" margin-top: 15px;	") #{fullDateString}
					div(class="cold-md-2 col-lg-2 btn-group")
							button(class="btn btn-default btn-lg dropdown-toggle",type="button",data-toggle="dropdown",aria-haspopup="true",aria-expanded="false", style="margin-left:-45px;")
								span #{fullDateString}
								span(class="caret", style='margin-left:10px')
							ul(class="dropdown-menu listStyle", id="dateList")
								li(data-date="2016-02-16")
									a(href="/onlive/timelaps/day1") 16 Février - Jour 1
								li(data-date="2016-02-17")
									a(href="/onlive/timelaps/day2") 17 Février - Jour 2
								li(data-date="2016-02-18")
									a(href="/onlive/timelaps/day3") 18 Février - Jour 3
								li(data-date="2016-02-19")
									a(href="/onlive/timelaps/day4") 19 Février - Jour 4
								li(data-date="2016-02-20")
									a(href="/onlive/timelaps/day5") 20 Février - Jour 5
								li(data-date="2016-02-21")
									a(href="/onlive/timelaps/day6") 21 Février - Jour 6
								li(data-date="2016-02-22")
									a(href="/onlive/timelaps/day7") 22 Février - Jour 7
								li(data-date="2016-02-23")
									a(href="/onlive/timelaps/day8") 23 Février - Jour 8
								li(data-date="2016-02-24")
									a(href="/onlive/timelaps/day9") 24 Février - Jour 9
								li(data-date="2016-02-25")
									a(href="/onlive/timelaps/day10") 25 Février - Jour 10
								li(data-date="2016-02-26")
									a(href="/onlive/timelaps/day11") 26 Février - Jour 11
								li(data-date="2016-02-27")
									a(href="/onlive/timelaps/day12") 27 Février - Jour 12
								li(data-date="2016-02-28")
									a(href="/onlive/timelaps/day13") 28 Février - Jour 13
								li(data-date="2016-02-29")
									a(href="/onlive/timelaps/day14") 29 Février - Jour 14
								li(data-date="2016-03-01")
									a(href="/onlive/timelaps/day15") 01 Mars - Jour 15
								li(data-date="2016-03-02")
									a(href="/onlive/timelaps/day16") 02 Mars - Jour 16
				div(class='row' style='height:120px')
					div(class='col-md-3 col-lg-3 nopadding')
						ul(class='onlive-alternative')
							li(class='content')
								a(href='/onlive/maps/#{key}')
									span(style='display: inline-block; vertical-align: middle; margin:5px 0 0 15px; float:left')
										img(class='icon-trace', src='/static/images/iconMap.png')
									span(style='font-size:1.7em; display: inline-block; vertical-align: middle; margin:15px 0 0 0px') LE TRACÉ
							li(class='empty')
							li(class='content active')
								a(href='/onlive/timelaps/#{key}')
									span(style='display: inline-block; vertical-align: middle; margin:5px 0 0 15px; float:left')
										img(class='icon-timelaps', src='/static/images/video.png')
									span(style='font-size:1.7em; display: inline-block; vertical-align: middle; margin:15px 0 0 0px') TIMELAPS									
									span(style='height:100%; display: inline-block; vertical-align: middle; background:black;	 width: 10px; float: right;')
					div(class='col-md-9 col-lg-9', style='height:100%')
						div(id="loader-global")
						div(id="notAvailable",style="display:none")
							h3 Pas de video disponible pour le moment !
							p Plusieurs raisons possibles:
							ul
								li L'étape du jour n'a pas encore commencé... Pas de panique ça arrive ! :)
								li Problème technique partiel : l'équipe 3.0 travaille à la rétablissement du service !
								li Le système 3.0 rencontre un probleme majeur...
						div(id="content",style="display:none")
							video(controls)
								source(src="../static/daily/#{daymonth}/videos/video.mp4")
								source(src="../static/daily/#{daymonth}/videos/video.avi")
								p Votre navigateur ne supporte pas la video... :/
						script(type='text/javascript', src='/static/javascripts/jquery.js')
						script(type='text/javascript', src='/static/javascripts/dateAble.js')
						script(type='text/javascript', src='/static/javascripts/timelaps.js')
						script(type="text/javascript",src="/static/javascripts/bootstrap.min.js")