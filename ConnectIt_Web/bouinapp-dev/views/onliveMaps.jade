	header(id='onlive-page',class='intro')
		div(class'intro-body')
			div(class='container')
				div(class='row')
					h3(class='col-md-8 col-lg-8 col-md-offset-2 col-lg-offset-2', style=" margin-top: 15px;	") #{fullDateString}
					div(class="cold-md-2 col-lg-2 btn-group")
						button(class="btn btn-default btn-lg dropdown-toggle",type="button",data-toggle="dropdown",aria-haspopup="true",aria-expanded="false", style="margin-left:-45px;")
							span #{fullDateString}
							span(class="caret", style='margin-left:10px')
						ul(class="dropdown-menu listStyle", id="dateList")
							li(data-date="2016-02-16")
								a(href="/onlive/maps/day1") 16 Février - Jour 1
							li(data-date="2016-02-17")
								a(href="/onlive/maps/day2") 17 Février - Jour 2
							li(data-date="2016-02-18")
								a(href="/onlive/maps/day3") 18 Février - Jour 3
							li(data-date="2016-02-19")
								a(href="/onlive/maps/day4") 19 Février - Jour 4
							li(data-date="2016-02-20")
								a(href="/onlive/maps/day5") 20 Février - Jour 5
							li(data-date="2016-02-21")
