extends layout

block content
	script(src='/static/javascripts/jquery.js')
	nav(class='navbar navbar-custom navbar-fixed-top', role='navigation')
			div(class='container', style='margin-right: 0;width: 100%')
				div(class='navbar-header visible-xs')
					div(class='mini-logobouineur')
				div(class='navbar visible-xs visible-sm navbar-custom-phone')
					div(class='dropdown-custom')
						a(href='#'	,data-toggle='dropdown', class='dropdown-toggle')
							span(class='glyphicon glyphicon-menu-hamburger',aria-hidden='true') Menu
						ul(class='dropdown-menu')
							li(class='hidden')
								a(href='#page-top')
							li
								a(class='page-scroll', href='http://localhost:3000/#home') Home
							li(role='separator',class='divider')
							li
								a(class='page-scroll', href='http://localhost:3000/#projet') Projet
							li(role='separator',class='divider')
							li
								a(class='page-scroll', href='http://localhost:3000/#onlive') On Live&iexcl;
							li(role='separator',class='divider')
							li
								a(class='page-scroll', href='http://localhost:3000/#sponsors') Sponsors
				div(class='navbar-right hidden-xs hidden-sm col-md-10 col-lg-10')
					ul(class='nav navbar-nav navbar-bar-custom')
						li(class='hidden')
								a(href='#page-top')
						li
							a(class='page-scroll', href='http://localhost:3000/#home') Home
						li
							a(class='page-scroll', href='http://localhost:3000/#projet') Le Projet
						li(class='active')
							a(class='page-scroll', href='http://localhost:3000/#onlive') On Live&iexcl;
						li
							a(class='page-scroll', href='http://localhost:3000/#sponsors') Sponsors
	header(id='onlive-page',class='intro')
		div(class'intro-body')
			div(class='container')
				h3 #{fullDateString}
				div(class='row' style='height:120px')
					div(class='col-md-3 col-lg-3 nopadding')
						ul(class='onlive-alternative')
							li(class='content active')
								a(href='/onlive/maps/#{key}')
									span(style='display: inline-block; vertical-align: middle; margin:5px 0 0 15px; float:left')
										img(class='icon-trace', src='/static/images/iconMap.png')
									span(style='font-size:1.7em; display: inline-block; vertical-align: middle; margin:15px 0 0 0px') LE TRACÉ
									span(style='height:100%; display: inline-block; vertical-align: middle; background:black;	 width: 10px; float: right;')
							li(class='empty')
							li(class='content')
								a(href='/onlive/timelaps/#{key}')
									span(style='display: inline-block; vertical-align: middle; margin:5px 0 0 15px; float:left')
										img(class='icon-timelaps', src='/static/images/video.png')
									span(style='font-size:1.7em; display: inline-block; vertical-align: middle; margin:15px 0 0 0px') TIMELAPS
							li(class='empty') 
							li(class='content')
								a(href='/onlive/photos/#{key}')
									span(style='display: inline-block; vertical-align: middle; margin:5px 0 0 15px; float:left')
										img(class='icon-photos', src='/static/images/photo.png')
									span(style='font-size:1.7em; display: inline-block; vertical-align: middle; margin:15px 0 0 0px') PHOTOS
					div(class='col-md-9 col-lg-9', style='height:100%')
						script(src='https://maps.googleapis.com/maps/api/js?key=AIzaSyCRngKslUGJTlibkQ3FkfTxj3Xss1UlZDA&callback=initLocation', async, defer)
						div(id="loader-global")
						div(id="notAvailable",style="display:none")
							h3 Tracé non disponible pour le moment !
							p Plusieurs raisons possibles:
							ul
								li L'étape du jour n'a pas encore commencé... Pas de panique ça arrive ! :)
								li Problème technique partiel : l'équipe 3.0 travaille à la rétablissement du service !
								li Le système 3.0 rencontre un probleme majeur...
						div(id='mapDay', style='display:none')
							script(type='text/javascript', src='/static/javascripts/onlive.js')